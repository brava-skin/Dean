# Facebook API Rate Limit Configuration
# Copy these settings to your .env file to improve rate limit handling

# Retry Configuration
META_RETRY_MAX=6                    # Increased from 4 to 6 retries
META_BACKOFF_BASE=1.0               # Increased from 0.4 to 1.0 seconds
META_TIMEOUT=30                     # Keep at 30 seconds
META_WRITE_COOLDOWN_SEC=10          # Increased from 5 to 10 seconds

# Circuit Breaker Configuration
META_CB_FAILS=5                      # Number of failures before circuit opens
META_CB_RESET_SEC=120               # Seconds before circuit resets

# Additional Rate Limiting
# Uncomment these if you're still hitting rate limits:
# META_WRITE_COOLDOWN_SEC=30        # Even longer cooldown
# META_BACKOFF_BASE=2.0            # Even longer backoff
# META_RETRY_MAX=8                 # More retries

# Facebook API Configuration
FB_API_VERSION=v23.0               # Use latest stable version
FB_APP_ID=your_app_id_here
FB_APP_SECRET=your_app_secret_here
FB_ACCESS_TOKEN=your_access_token_here
FB_AD_ACCOUNT_ID=your_ad_account_id_here
FB_PIXEL_ID=your_pixel_id_here
FB_PAGE_ID=your_page_id_here

# Optional: Instagram Actor ID for Instagram placements
IG_ACTOR_ID=your_instagram_actor_id_here

# Store Configuration
STORE_URL=https://your-store.com
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_key
SUPABASE_TABLE=meta_creatives

# Slack Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_WEBHOOK_URL_ERRORS=your_slack_errors_webhook_url

# Currency Configuration
USD_EUR_RATE=0.92
BREAKEVEN_CPA=34
COGS_PER_PURCHASE=15
